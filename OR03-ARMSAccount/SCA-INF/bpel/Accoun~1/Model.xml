    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:AccountToARMSRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:AccountToARMSResponseMessage"/>
    <variable name="Counter" type="xsd:integer"/>
    <variable name="totaleCLEARSAccount" type="xsd:integer"/>
    <variable name="invalidVar" messageType="bpelx:RuntimeFaultMessage"/>
    <variable name="replyErrorValidation_process_OutputVariable" messageType="client:AccountToARMSResponseMessage"/>
    <variable name="Transformation1" element="ns13:Transformations"/>
  </variables>
  <faultHandlers id="BpFhs0">
    <catch faultName="bpelx:invalidVariables" faultVariable="invalidVar" id="BpCFt0">
      <sequence id="BpSeq0">
        <assign name="Assign_1" id="BpAss0">
          <copy>
            <from expression="xpath20:current-dateTime()"/>
            <to variable="replyErrorValidation_process_OutputVariable" part="payload" query="/ns9:wsReply/ns9:receiveDateTime"/>
          </copy>
          <copy>
            <from expression="'ERROR'"/>
            <to variable="replyErrorValidation_process_OutputVariable" part="payload" query="/ns9:wsReply/ns9:status"/>
          </copy>
          <copy>
            <from expression="string(bpws:getVariableData('invalidVar','summary'))"/>
            <to variable="replyErrorValidation_process_OutputVariable" part="payload" query="/ns9:wsReply/ns9:description"/>
          </copy>
        </assign>
        <reply name="replyErrorValidation" variable="replyErrorValidation_process_OutputVariable" partnerLink="accounttoarms_client" portType="client:AccountToARMS" operation="process" id="BpRpl0"/>
      </sequence>
    </catch>
