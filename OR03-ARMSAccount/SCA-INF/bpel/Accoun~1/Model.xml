    -->
    <partnerLink name="accounttoarms_client" partnerLinkType="client:AccountToARMS" myRole="AccountToARMSProvider"/>
    <partnerLink name="ARMSAccountDB" partnerRole="ARMSAccountDB_role" partnerLinkType="ns14:ARMSAccountDB_plt"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
