        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:processXSLT('xsl/invokeTransformation.xsl',bpws:getVariableData('inputVariable','payload'))"/>
        <to variable="inputVariable" part="payload"/>
      </copy>
    </assign>
