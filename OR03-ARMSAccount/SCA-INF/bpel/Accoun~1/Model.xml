          <copy>
            <from expression="ora:processXSLT('xsl/transformARMSAccount.xsl',bpws:getVariableData('inputVariable','payload'))"/>
            <to variable="insertARMSAccount_merge_InputVariable" part="AccountCollection"/>
          </copy>
        </assign>
        <invoke name="insertARMSAccount" inputVariable="insertARMSAccount_merge_InputVariable" partnerLink="ARMSAccountDB" portType="ns14:ARMSAccountDB_ptt" operation="merge" id="BpInv0"/>
        <assign name="AssignSukses" id="BpAss4">
          <copy>
            <from expression="xpath20:current-dateTime()"/>
            <to variable="outputVariable" part="payload" query="/ns9:wsReply/ns9:receiveDateTime"/>
          </copy>
          <copy>
            <from expression="'SUCCESS'"/>
            <to variable="outputVariable" part="payload" query="/ns9:wsReply/ns9:status"/>
          </copy>
          <copy>
            <from expression="'AccountToARMS BPEL Sukses melakukan insert.'"/>
            <to variable="outputVariable" part="payload" query="/ns9:wsReply/ns9:description"/>
          </copy>
        </assign>
      </sequence>
    </scope>
    <reply name="replyOutput" partnerLink="accounttoarms_client" portType="client:AccountToARMS" operation="process" variable="outputVariable" id="BpRpl1"/>
  </sequence>
